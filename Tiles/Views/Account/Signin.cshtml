@model Tiles.Models.Data.LoginData

@{
    ViewBag.Title = "Sign In";
    Layout = "_LayoutHome";
}

<div class="container bg-fill">
    <h1>Sign In</h1>

    <form asp-action="Signin" asp-controller="Account" method="post">
        <div class="validation" asp-validation-summary="ModelOnly" />

        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input class="form-control" type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>