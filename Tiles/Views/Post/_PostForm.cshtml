@model Models.Data.Post

<form asp-controller="Post" asp-action="@ViewData["action"]" method="post">

    @if (Model != null)
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    }

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Enter tile title" value="@Model?.Title" />
    </div>

    <div class="form-group">
        <label asp-for="Content">Short description</label>
        <textarea class="form-control" asp-for="Content" placeholder="Enter tile description">@Model?.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
