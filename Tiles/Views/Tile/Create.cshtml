@model Tiles.Models.Data.Tile

@{
    ViewBag.Title = "Create tile";
    Layout = "_Layout";
}

<h2>Create new tile</h2>

<form asp-controller="Tile" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Enter tile title">
    </div>

    <div class="form-group">
        <label asp-for="MiniDesc">Short description</label>
        <input type="text" class="form-control" asp-for="MiniDesc" placeholder="Enter tile description">
    </div>

    <div class="form-group">
        <label asp-for="Uri">Url</label>
        <input type="text" class="form-control" asp-for="Uri" placeholder="Enter tile url">
    </div>

    <div class="form-group">
        <label asp-for="Width">Width</label>
        <input type="number" class="form-control" asp-for="Width" placeholder="Enter tile width">
    </div>

    <div class="form-group">
        <label asp-for="Height">Height</label>
        <input type="number" class="form-control" asp-for="Height" placeholder="Enter tile height">
    </div>

    <div class="form-group">
        <label asp-for="PhotoUri">Image url</label>
        <input type="text" class="form-control" asp-for="PhotoUri" placeholder="Enter image url">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>